\ProvidesPackage{insper-mtheme}

% -----------------------------
% Paleta de cores Insper
% -----------------------------
\definecolor{insperred}{cmyk}{0,1,1,.1} % vermelho institucional
\definecolor{inspergray}{cmyk}{0,0,0,.15} % cinza neutro
\definecolor{insperdarkgrey}{cmyk}{0,0,0,.15} % cinza escuro
\definecolor{insperdark}{cmyk}{0,0,0,.84} % escuro
\definecolor{insperlight}{cmyk}{0,0,0,.04} % cinza claro

% -----------------------------
% Aplicação no Metropolis
% -----------------------------
% Texto normal
\setbeamercolor{normal text}{fg=insperdark,bg=white}

% Títulos
\setbeamercolor{title}{fg=insperred}
\setbeamercolor{subtitle}{fg=inspergray}
\setbeamercolor{frametitle}{fg=white,bg=insperred}

% Progress bar
\setbeamercolor{progress bar}{fg=insperred,bg=insperlight}

% Numeração de páginas
\setbeamercolor{page number in head/foot}{fg=inspergray}

% Blocos
\setbeamercolor{block title}{fg=insperred, bg=insperred!10}
\setbeamercolor{block body}{fg=insperdark, bg=insperlight}

% Listas
\setbeamercolor{itemize item}{fg=insperred}
\setbeamercolor{enumerate item}{fg=insperred}

% Alertas e exemplos
\setbeamercolor{alerted text}{fg=insperred}
\setbeamercolor{example text}{fg=inspergray}

% Palheta primária
\setbeamercolor{palette primary}{fg=white, bg=insperred}